<h2> Edit your review or click your reviews to finalize without editing. </h2>

<form method="post" action="/reviews/<%= @review.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="game_title">Game Title</label></br>
    <input type="text" name="game_title" value="<%= @review.game_title %>"></br></br></br>

    <label for="content">Review</label></br>
    <input id="content" type="text" name="content"></br></br>

  <input type="submit" value="submit">
</form></br>

<form method="get" action="/home">
  <input type="hidden" name="_method" value="edit" />
  <input type="submit" value="Go Home">
</form></br>

<form method="get" action="/reviews/<%= current_user.slug %>/view_all">
  <input type="hidden" name="_method" value="edit" />
  <input type="submit" value="Your Reviews">
</form>