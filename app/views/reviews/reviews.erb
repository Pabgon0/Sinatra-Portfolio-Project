<h1>Hello, <%= current_user.username %>.</h1></br>
<form method="get" action="/reviews/new">
  <input type="hidden" name="_method" value="edit" />
  <input type="submit" value="Create a review">
</form></br>
<form method="get" action="/reviews/<%= current_user.slug %>/view_all">
  <input type="hidden" name="_method" value="edit" />
  <input type="submit" value="View your reviews">
</form></br>
<form method="get" action="/home">
  <input type="hidden" name="_method" value="edit" />
  <input type="submit" value="Go Home">
</form></br>
<h2> Reviews </h2></br>

<% Review.all.each do |review| %>
  <p>Game Title: <%= review.game_title %></p>
  <p>Review: <%= review.content %></p></br></br>
<% end %>

<form method="get" action="/logout">
  <input type="hidden" name="_method" value="edit" />
  <input type="submit" value="Log Out">
</form>